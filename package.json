{
  "name": "vscode-better-stacking-contexts",
  "displayName": "CSS Better Stacking Context Highlighter",
  "description": "Highlights CSS stacking contexts in VS Code.",
  "author": "Mike Rheault",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrheault/vscode-better-stacking-contexts"
  },
  "keywords": [
    "css",
    "scss",
    "stacking context",
    "z-index"
  ],
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.highlightStackingContexts",
        "title": "Highlight Stacking Contexts"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  }
}
